.wrapper_with_padding
  #notes.clearfix
    - if @notes.present?
      - @notes.each do |note|
        %a{ href: (url_for [note])}
          .note
            %p.title= note.title
            %p.date= time_ago_in_words(note.created_at)
    - else
      %h2 = link_to 'New Note', new_note_path

